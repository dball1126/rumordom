<% provide(:title, 'Business') %>
<% provide(:button_text, 'Add A Business') %>
<h1>Create Business</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@business) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>
    
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :Choose_up_to_three_categories %>
  
  <% @cat_cat=Category.all[0..27] %>
  <% @cat_arr = @cat_cat.map{|f| [f.name, f.id] }.to_a.sort %>
  <% @cat_arr[0] = ["Not Available", 0] %>
<%= f.select :category1_id, @cat_arr %>
<%= f.select :category2_id, @cat_arr %>
<%= f.select :category3_id, @cat_arr %>
  <%= f.label :address1 %>
  <%= f.text_field :address1, class: 'form-control' %>
  
  <%= f.label :address2 %>
  <%= f.text_field :address2, class: 'form-control', placeholder: "Apartment, suite, unit, floor, etc." %>
  
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>
  
  <%= f.label :state %>
  <%= f.text_field :state, class: 'form-control' %>
  
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, class: 'form-control' %> 
  
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>
  
  <br />

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>