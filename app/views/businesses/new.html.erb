<% provide(:title, 'Business') %>
<% provide(:button_text, 'Create a business') %>
<h1>Create Business</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@business) do |f| %>
    
    <%= render 'shared/error_messages', object: f.object %>
    
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_area :description, class: 'form-control' %>
  <%= f.label :Choose_up_to_three_categories %>
<%= f.select :category1_id, Category.all.map{ |f| [f.name, f.id] } %>
<%= f.select :category2_id, Category.all.map{ |f| [f.name, f.id] } %>
<%= f.select :category3_id, Category.all.map{ |f| [f.name, f.id] } %>
  <%= f.label :address1 %>
  <%= f.text_field :address1, class: 'form-control' %>
  
  <%= f.label :address2 %>
  <%= f.text_field :address2, class: 'form-control' %>
  
  <%= f.label :city %>
  <%= f.text_field :city, class: 'form-control' %>
  
  <%= f.label :state %>
  <%= f.text_field :state, class: 'form-control' %>
  
  <%= f.label :zipcode %>
  <%= f.text_field :zipcode, class: 'form-control' %> 
  
  <%= f.label :phone %>
  <%= f.text_field :phone, class: 'form-control' %>
  
  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>
  
  <%= f.label "Add image" %>
  <%= f.file_field :image %><br />

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>
  </div>
</div>