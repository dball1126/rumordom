<% provide(:title, 'Edit user') %>
<% provide(:button_text, 'Save changes') %>
<h1>Update your profile</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= render 'form' %>
    <div class="profile_picture">
      <%= @user.picture? ? (image_tag @user.picture.url, size: 50) : (image_tag("http://placehold.it/200x200", size: 50)) %>
      <%= "To switch your Profile picture, look above and click Choose File." %>
    </div>
  </div>
</div>