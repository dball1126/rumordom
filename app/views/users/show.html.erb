<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
   
    <%= render 'follow_form' if logged_in? %>
    <% if @user.experiences.any? %>
      <h3>Experiences (<%= @user.experiences.count %>)</h3>
      <ol class="experiences">
        <%= render @experiences %>
      </ol>
      <%= will_paginate @experiences %>
      
    <% end %> 
  </div>
</div>