<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <span><font color="#61d95e" size="4em">Rumor</font><font color="#e60000" size="4em">dom</font></span>
<%= @user.picture? ? (link_to image_tag(@user.picture.url, size: 50), @user) : (link_to image_tag("http://placehold.it/200x200", size: 50), @user) %>
<h1><%= @user.name %></h1>
<span><%= link_to "view my profile", @user %></span>
<span><%= pluralize(@user.experiences.count, "experience") %></span>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= link_to "Add A Business", businesses_new_path, class: "btn btn-lg btn-primary" %>
  </aside>
  <div class="col-md-8" >
    <%= render 'follow_form' if logged_in? %>
      <% if @user.experiences.any? %>
      <h3>Experiences (<%= @user.experiences.count %>)</h3>
      <ol class="experiences" >
        <%= render @experiences %>
      </ol>
      <%= will_paginate @experiences %>
      <% else %>
      <h3><center>Your Feed is empty, go follow a business or user to start generating
          a feed of recent customer interactions/experiences</center></h3>
    <% end %> 

  </div>
</div>